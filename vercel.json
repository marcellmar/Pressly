{
  "version": 2,
  "builds": [
    { "src": "vercel_app.py", "use": "@vercel/python" },
    { "src": "build/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/vercel_app.py" },
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/index.html" }
  ],
  "env": {
    "REQUIREMENTS_FILE": "vercel-requirements.txt"
  },
  "buildCommand": "bash vercel-build.sh"
}